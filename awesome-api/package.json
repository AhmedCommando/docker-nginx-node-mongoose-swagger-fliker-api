{
  "name": "node-typescript-webpack-boilerplate",
  "version": "1.0.0",
  "description": "a boilerplate using node with typescript and webpack",
  "main": "./src/bin/www.ts",
  "scripts": {
    "test:dev:v1": "TS_NODE_PROJECT=config/test/tsconfig.test.json env DB_URL='develop.domain.com' DB_NAME='awesomeDB' DB_PORT=27017 API_VERSION='v1' mocha -r ts-node/register test/**/*.test.ts --timeout 10000",
    "test:v1": "TS_NODE_PROJECT=config/test/tsconfig.test.json env DB_URL='mongo' DB_NAME='awesomeDB' DB_PORT=27017 API_VERSION='v1' mocha -r ts-node/register test/**/*.test.ts --timeout 10000",
    "clean": "rimraf ./build/* && rimraf ./logs/*",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "build": "yarn clean && yarn lint && webpack --watch",
    "start:dev": "NODE_ENV=development yarn build",
    "run:dev": "pm2-runtime start ./config/pm2/pm2-dev-process.config.js",
    "start:prod": "NODE_ENV=production yarn build",
    "run:prod": "pm2 start ./config/pm2/pm2-prod-process.config.js",
    "monitor": "pm2 monit",
    "logs": "pm2 logs api-rest --lines 2000",
    "stop": "pm2 delete api-rest && yarn clean"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "pm2",
    "webpack",
    "winston logger"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/AhmedCommando/docker-nginx-node-mongoose-swagger-fliker-api"
  },
  "author": "Ahmed Khalil Bejaoui",
  "license": "MIT",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/express": "^4.17.0",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.8",
    "@types/node": "^12.0.12",
    "@types/node-fetch": "^2.3.7",
    "@types/request": "^2.48.1",
    "@types/source-map": "0.5.2",
    "@types/supertest": "^2.0.8",
    "@types/swagger-ui-express": "^3.0.1",
    "@types/webpack": "^4.4.34",
    "chai": "^4.2.0",
    "fork-ts-checker-webpack-plugin": "^1.3.7",
    "mocha": "^6.1.4",
    "source-map": "^0.7.3",
    "supertest": "^4.0.2",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-consistent-codestyle": "^1.15.1",
    "tslint-defocus": "^2.0.6",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-origin-ordered-imports-rule": "^1.2.2",
    "typescript": "^3.5.2",
    "webpack": "^4.35.2",
    "webpack-cli": "^3.3.5",
    "webpack-node-externals": "^1.7.2",
    "webpack-shell-plugin": "^0.5.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "global": "^4.4.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.6.4",
    "node-fetch": "^2.6.0",
    "node-gyp": "^5.0.2",
    "pm2": "^3.5.1",
    "q": "^1.5.1",
    "request": "^2.88.0",
    "swagger-ui-express": "^4.0.7",
    "winston": "^3.2.1"
  }
}
